package recfun
import common._

object Main {
  def main(args: Array[String]) {
    println("Pascal's Triangle")
    for (row <- 0 to 10) {
      for (col <- 0 to row)
        print(pascal(col, row) + " ")
      println()
    }
  }

  /**
   * Exercise 1
   */
  def pascal(c: Int, r: Int): Int = {
    if (c == 0 || c == r) 1
    else pascal(c - 1, r - 1) + pascal(c, r - 1)
  }

  /**
   * Exercise 2
   */
  def balance(chars: List[Char]): Boolean = {
    def step(chars: List[Char], stillOpen: Int, ): Boolean = {
      if (chars.isEmpty) stillOpen == 0
      else {
        if (chars.head == '(') step(chars.tail, stillOpen + 1) 
        else if (chars.head == ')') step(chars.tail, stilOpen - 1)
        else step(chars.tail, stillOpen)
      }
    }
    step(chars, 0, false)
  }

  /**
   * Exercise 3
   */
  def countChange(money: Int, coins: List[Int]): Int = ???
}
